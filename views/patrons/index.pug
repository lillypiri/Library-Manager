extends ../layout

block main
	body
		h1 Patrons
		p
			a.button(href="/patrons/new") Create New Patron
		p
		form(action="/patrons/" + "?_method=GET", method="get")
			div
				label(for="query") Search by First name, last name or library ID:
				input(type="text", name="q")
				input(type="submit" value="Search")
		table
			thead
				tr
					th Name 
					th Address
					th Email
					th Library ID
					th Zip
			tbody
				each patron in patrons
					tr
						td
							a(href="/patrons/" + patron.id)= patron.first_name + " " + patron.last_name
						td= patron.address
						td= patron.email
						td= patron.library_id
						td= patron.zip_code
		p= "Patrons in System: " + patronCount
		p= "Pages: "
		- for (var x = 1; x <= pages; x++)
			a(href="/patrons/?page=" + x)= x + "  "